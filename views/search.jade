extends ./wrapper.jade

block content
  if data.hasQuery
    h1.text-center Not yet implemented.
  else
    .row
      h1.text-center Search for a user.
      div(class="col-md-6 col-md-offset-3")
        form(action="/search/" method="GET" role="search")
          .form-group
            input(class="form-control" type="text" name="user" placeholder="Search for users.")
          .form-group
            button(class="btn btn-default" type="submit") Search
